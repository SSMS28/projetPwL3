{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .form-group{
            margin-top: 15px;   
        }
    </style>
    <h2>Connexion</h2>
    <form action="{{path('security_login')}}" method="post"> {# Pour ne pas que l'adresse soit affich√© dans l'url #}
        <div class="form-group">
            <input placeholder="Votre adresse..." required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Votre password..." required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Se connecter</button>
        </div>
    </form>
{% endblock %}